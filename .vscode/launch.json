    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Torchrun Current File",
            "type": "python",
            "request": "launch",
            "program": "/usr/local/bin/torchrun",
            "args": [
                "--nproc_per_node=1",
                "${file}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}