{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Perturbation Analysis",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/perturbation_analysis.py",
            "args": [
                "--plot"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Train Model",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/train.py",
            "args": [
                "--model_type",
                "llama",
                "--use_ei",
                "--use_ppo"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}