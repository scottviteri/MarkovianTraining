            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "/root/MarkovianTraining"
            }
        },
        {
            "name": "Plot All Perturbations",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/perturbation_analysis.py",
            "args": [
                "--log_file", "results_2_mid/log.jsonl",
